<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema base para modo oscuro -->
    <style name="Base.Theme.CompuTronica.Dark" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/azul_profundo_night</item>
        <item name="colorPrimaryVariant">@color/azul_oscuro_night</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/azul_suave_night</item>
        <item name="colorSecondaryVariant">@color/azul_verdoso_night</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Fondo y texto -->
        <item name="android:background">@color/BackGround_night</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gris_claro_night</item>

        <!-- Ripple y selecciÃ³n -->
        <item name="colorControlHighlight">@color/azul_suave_night</item>
        <item name="colorControlNormal">@color/gris_claro_night</item>

        <!-- Estado -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>

        <!-- Elementos adicionales de Material 3 -->
        <item name="android:windowBackground">?attr/android:background</item>
    </style>

    <style name="Theme.CompuTronica" parent="Base.Theme.CompuTronica.Dark" />
</resources>