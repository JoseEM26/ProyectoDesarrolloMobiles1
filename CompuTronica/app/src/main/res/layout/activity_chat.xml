<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD">

    <!-- Toolbar mejorado -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/azul_oscuro"
        android:elevation="4dp"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:navigationIconTint="@android:color/white"/>

    <!-- RecyclerView con padding lateral -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatRecycler"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/sendMessageLayout"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"/>

    <!-- Layout de envío de mensaje mejorado -->
    <RelativeLayout
        android:id="@+id/sendMessageLayout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@android:color/white"
        android:elevation="8dp">

        <!-- CardView para el input -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/sendMessageIcon"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#F5F5F5">

            <EditText
                android:id="@+id/messageEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Escribe tu mensaje"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/azul_oscuro"
                android:padding="14dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:minHeight="48dp"
                android:maxLines="4"
                android:inputType="textCapSentences|textMultiLine"
                android:background="@android:color/transparent"
                android:textSize="16sp"/>

        </androidx.cardview.widget.CardView>

        <!-- Botón de envío circular -->
        <androidx.cardview.widget.CardView
            android:id="@+id/sendMessageIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:cardCornerRadius="24dp"
            app:cardBackgroundColor="@color/azul_profundo"
            app:cardElevation="4dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_send_24"
                android:tint="@android:color/white"
                android:contentDescription="Enviar mensaje"/>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>