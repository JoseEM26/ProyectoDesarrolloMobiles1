<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp"
    android:fillViewport="true"
    tools:context=".PresentacionActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Fondo degradado superior -->
        <View
            android:id="@+id/fondoDegradado"
            android:layout_width="0dp"
            android:layout_height="280dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/gradient_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Imagen del Instituto -->
        <ImageView
            android:id="@+id/imgInstituto"
            android:layout_width="280dp"
            android:layout_height="220dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/bg_card_blanca"
            android:clipToOutline="true"
            android:contentDescription="@string/contextDescripcionImgInstituto"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_logo_foreground"
            android:elevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Tarjeta de información -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="24dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fondoDegradado"
            app:strokeColor="@color/azul_suave"
            app:strokeWidth="1dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Título -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:letterSpacing="0.02"
                    android:text="@string/txtInstitutoTitulo"
                    android:textColor="@color/azul_oscuro"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Instituto CompuTronica" />

                <!-- Lema -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvLema"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:text="@string/txtInstitutoLema"
                    android:textColor="@color/azul_suave"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvTitulo"
                    tools:text="Innovación y Excelencia" />

                <!-- Separador -->
                <View
                    android:id="@+id/separator"
                    android:layout_width="100dp"
                    android:layout_height="2dp"
                    android:layout_marginVertical="16dp"
                    android:background="@color/azul_profundo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvLema" />

                <!-- Descripción -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvDescripcion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="6dp"
                    android:text="@string/txtInstitutoDescripcion"
                    android:textAlignment="center"
                    android:textColor="@color/negro"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/separator"
                    tools:text="@string/text_presentacion" />

                <!-- Título: Visión -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvVisionTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/text_vision"
                    android:textColor="@color/azul_profundo"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/tvDescripcion"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Contenido: Visión -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvVision"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/txtInstitutoVision"
                    android:textAlignment="center"
                    android:textColor="@color/negro"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/tvVisionTitulo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Título: Misión -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvMisionTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/text_mision"
                    android:textColor="@color/azul_profundo"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/tvVision"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Contenido: Misión -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvMision"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/txtInstitutoMision"
                    android:textAlignment="center"
                    android:textColor="@color/negro"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/tvMisionTitulo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />


                <LinearLayout
                    android:id="@+id/contactContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvMision">

                <!-- Sede -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardSede"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="3dp"
                        app:rippleColor="@color/azul_suave">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/baseline_location_on_24"
                                app:tint="@color/azul_profundo" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="center"
                                android:text="@string/txtInstitutoSede"
                                android:textColor="@color/azul_oscuro"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Teléfono -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardTelefono"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_marginHorizontal="8dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="3dp"
                        app:rippleColor="@color/azul_suave">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/baseline_local_phone_24"
                                app:tint="@color/azul_profundo" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="center"
                                android:text="@string/txtInstitutoTelefono"
                                android:textColor="@color/azul_oscuro"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Correo -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardCorreo"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="3dp"
                        app:rippleColor="@color/azul_suave">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/baseline_email_24"
                                app:tint="@color/azul_profundo" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="center"
                                android:text="@string/txtInstitutoCorreo"
                                android:textColor="@color/azul_oscuro"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>