<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:strokeColor="@color/azul_suave"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Columna de datos de la asignatura -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtNombreAsig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/subject_name"
                android:textColor="@color/azul_oscuro"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="@string/text_programacion_avanzada" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtProfesorCodigoAsig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif"
                android:text="@string/subject_details"
                android:textColor="@color/gris_oscuro"
                android:textSize="14sp"
                tools:text="@string/text_prof" />
        </LinearLayout>

        <!-- BotÃ³n de opciones -->
        <ImageButton
            android:id="@+id/btnMenuAsig"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/menu_action"
            android:src="@drawable/baseline_dehaze_24"
            app:tint="@color/azul_oscuro" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>